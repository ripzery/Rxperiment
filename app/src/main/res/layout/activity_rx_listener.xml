<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ripzery.rxperiment.MainActivity">

    <TextView
        android:id="@+id/tvActivity"
        android:text="Activity RxListener"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvUpdateRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_below="@id/tvActivity"
        android:layout_centerHorizontal="true"
        android:text="Random Int"
        android:textSize="20sp"/>

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/tvUpdateRandom"
        android:layout_margin="32dp">


    </FrameLayout>

</RelativeLayout>
